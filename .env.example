# API Configuration
API_URL=https://www.easydoct.com/api/rdv/getRdvDayAvailabilities

# Automated Login Configuration
# Set to 'true' to enable automated login (requires EASYDOCT_EMAIL, EASYDOCT_PASSWORD, EXAM_URL)
# Set to 'false' to use manual session cookies (requires SESSION_KEY, USER_SESSION_KEY, ASPNET_COOKIES)
AUTO_LOGIN_ENABLED=true

# Easydoct Login Credentials (REQUIRED if AUTO_LOGIN_ENABLED=true)
EASYDOCT_EMAIL=your.email@example.com
EASYDOCT_PASSWORD=your_password_here
EXAM_URL=https://www.easydoct.com/rdv/gie-irldr-imagerie-rennes

# Session Cookies (REQUIRED if AUTO_LOGIN_ENABLED=false, auto-generated if true)
# These will be automatically obtained if AUTO_LOGIN_ENABLED=true
# Otherwise, obtain them manually from browser session
SESSION_KEY=your_session_key_here
USER_SESSION_KEY=N
ASPNET_COOKIES=your_aspnet_cookies_here

# Appointment Parameters (REQUIRED)
EXAM_TYPE_ID=3374

# Exam Selection (choose one approach):
# Recommended: Auto-resolve from name
EXAM_NAME=IRM pied / cheville

# Alternative: Provide exam ID directly (comment out EXAM_NAME above)
# EXAM_ID=56796

# Patient Information
PATIENT_BIRTH_DATE=1950-01-01T22:00:00.000+02:00

# Minimum Date for Appointment Search (OPTIONAL)
# Format: YYYYMMDD (e.g., 20251125 for Nov 25, 2025)
# If not specified, defaults to today's date
# MIN_DATE=20251125

# Location Filtering (OPTIONAL - filters slots to specific location)
# Recommended: Auto-resolve from name
LOCATION_NAME=CANOPIA

# Alternative: Provide location ID directly (comment out LOCATION_NAME above)
# OFFICE_PLACE_IDS=1390

# Polling Configuration
POLL_INTERVAL_SECONDS=60
# Randomization amount (jitter) to avoid bot detection (set to 0 to disable)
# Actual interval will be: POLL_INTERVAL_SECONDS ± POLL_INTERVAL_JITTER_SECONDS
# Example: 60 ± 10 means checks at random intervals between 50-70 seconds
POLL_INTERVAL_JITTER_SECONDS=10

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=irm_slots.log

# Notification Configuration from https://api.slack.com/apps
NOTIFICATIONS_ENABLED=true
SLACK_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C01234567890
